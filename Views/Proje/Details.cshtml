@model FreelanceTakipSistemi.Models.Proje

@{
    ViewData["Title"] = "Proje Detayları";
}

<div class="container mt-4">
    <h2 class="mb-4">@Model.Baslik</h2>

    <dl class="row">
        <dt class="col-sm-4">Açıklama</dt>
        <dd class="col-sm-8">@Model.Aciklama</dd>

        <dt class="col-sm-4">Başlangıç Tarihi</dt>
        <dd class="col-sm-8">@Model.BaslangicTarihi?.ToShortDateString()</dd>

        <dt class="col-sm-4">Bitiş Tarihi</dt>
        <dd class="col-sm-8">@Model.BitisTarihi?.ToShortDateString()</dd>

        <dt class="col-sm-4">Şirket</dt>
        <dd class="col-sm-8">@Model.Sirket?.Ad</dd>

        <dt class="col-sm-4">Sorumlu Kullanıcı</dt>
        <dd class="col-sm-8">@Model.Kullanici?.Isim</dd>
    </dl>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.ProjeId" class="btn btn-warning me-2">Düzenle</a>
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </div>
</div>
