@model FreelanceTakipSistemi.Models.Proje

@{
    ViewData["Title"] = "Proje Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">✏️ Proje Düzenle</h2>

<form asp-action="Duzenle" method="post">
    <input type="hidden" asp-for="ProjeId" />

    <div class="mb-3">
        <label asp-for="ProjeAdi" class="form-label">Proje Adı</label>
        <input asp-for="ProjeAdi" class="form-control" />
        <span asp-validation-for="ProjeAdi" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Aciklama" class="form-label">Açıklama</label>
        <textarea asp-for="Aciklama" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="BaslangicTarihi" class="form-label">Başlangıç Tarihi</label>
        <input asp-for="BaslangicTarihi" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="BitisTarihi" class="form-label">Bitiş Tarihi</label>
        <input asp-for="BitisTarihi" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
