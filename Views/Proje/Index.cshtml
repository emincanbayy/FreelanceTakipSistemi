@model IEnumerable<FreelanceTakipSistemi.Models.Proje>

@{
    ViewData["Title"] = "Projelerim";
}

<h2>@ViewData["Title"]</h2>

<!-- Yeni Proje Ekleme Butonu -->
<a href="@Url.Action("Yeni", "Proje")" class="btn btn-primary mb-3">Yeni Proje Ekle</a>

<!-- Proje Listesi Tablosu -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Proje Adı</th>
            <th>Açıklama</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var proje in Model)
        {
            <tr>
                <td>@proje.ProjeAdi</td>
                <td>@proje.Aciklama</td>
                <td>@proje.Durum</td>
                <td>
                    <!-- Düzenle ve Sil Butonları -->
                    <a href="@Url.Action("Duzenle", "Proje", new { id = proje.ProjeId })" class="btn btn-warning">Düzenle</a>
                    <a href="@Url.Action("Sil", "Proje", new { id = proje.ProjeId })" class="btn btn-danger" onclick="return confirm('Bu projeyi silmek istediğinizden emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
