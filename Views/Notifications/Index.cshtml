@model IEnumerable<FreelanceTakipSistemi.Models.Notification>
@{
    ViewData["Title"] = "Bildirimler";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Mesaj</th>
            <th>Durum</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model)
        {
            <tr class="@(note.IsRead ? "table-secondary" : "")">
                <td>@note.CreatedAt.ToLocalTime().ToString("g")</td>
                <td>
                    @if (note.Gorev != null)
                    {
                        <strong>[@note.Gorev.Baslik]</strong>

                        <br />
                    }
                    @note.Message
                </td>
                <td>
                    @if (note.IsRead)
                    {
                        <span class="badge bg-success">Okundu</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Yeni</span>
                    }
                </td>
                <td>
                    @if (!note.IsRead)
                    {
                        <form asp-action="MarkAsRead" method="post">
                            <input type="hidden" name="id" value="@note.Id" />
                            <button type="submit" class="btn btn-sm btn-primary">Okundu Yap</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
