@model FreelanceTakipSistemi.Models.Yorum
@{
    ViewData["Title"] = "Yorumu Düzenle";
}
<div class="container py-4">
    <h2 class="mb-4 text-primary"><i class="bi bi-pencil-square me-2"></i>@ViewData["Title"]</h2>
    <form asp-action="Edit" method="post" class="shadow-sm p-4 bg-white rounded">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="GorevId" />
        <input type="hidden" asp-for="RowVersion" />
        <div class="mb-3">
            <label asp-for="KullaniciAdi" class="form-label"></label>
            <input asp-for="KullaniciAdi" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="Icerik" class="form-label"></label>
            <textarea asp-for="Icerik" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Icerik" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-between">
            <a asp-action="Index" asp-route-gorevId="@Model.GorevId" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Geri
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle me-1"></i> Güncelle
            </button>
        </div>
    </form>
</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
 }
