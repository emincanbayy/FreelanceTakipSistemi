@model FreelanceTakipSistemi.Models.Yorum
@{
    ViewBag.Title = "Yorumu Düzenle";
}

<h2>Yorumu Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="GorevId" />

    <div class="form-group">
        <label asp-for="KullaniciAdi"></label>
        <input asp-for="KullaniciAdi" class="form-control" />
        <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Icerik"></label>
        <textarea asp-for="Icerik" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Icerik" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" asp-route-gorevId="@Model.GorevId" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
