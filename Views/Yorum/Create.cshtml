@model FreelanceTakipSistemi.Models.Yorum
@{
    ViewData["Title"] = "Yeni Yorum";
    Layout = "_Layout";
}

<div class="container py-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form asp-action="Create" method="post" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="GorevId" />

        <div class="mb-3">
            <label asp-for="Icerik" class="form-label">Yorum</label>
            <textarea asp-for="Icerik"
                      class="form-control"
                      rows="4"
                      placeholder="Yorumunuzu girin…"
                      required></textarea>
            <span asp-validation-for="Icerik" class="text-danger"></span>
        </div>

        <div class="d-flex">
            <button type="submit" class="btn btn-success me-2">
                <i class="bi bi-check-circle me-1"></i>Kaydet
            </button>
            <a asp-action="Index"
               asp-route-gorevId="@Model.GorevId"
               class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i>Geri
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
