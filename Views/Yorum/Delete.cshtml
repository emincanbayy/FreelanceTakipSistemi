@model FreelanceTakipSistemi.Models.Yorum
@{
    ViewBag.Title = "Yorumu Sil";
}

<h2>Yorumu Sil</h2>

<div class="alert alert-warning">
    <strong>Bu yorumu silmek istediğinize emin misiniz?</strong>
</div>

<dl class="row">
    <dt class="col-sm-2">Kullanıcı Adı</dt>
    <dd class="col-sm-10">@Model.KullaniciAdi</dd>

    <dt class="col-sm-2">İçerik</dt>
    <dd class="col-sm-10">@Model.Icerik</dd>

    <dt class="col-sm-2">Tarih</dt>
    <dd class="col-sm-10">@Model.OlusturmaTarihi.ToString("g")</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" asp-route-gorevId="@Model.GorevId" class="btn btn-secondary">İptal</a>
</form>
