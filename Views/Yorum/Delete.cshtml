@model FreelanceTakipSistemi.Models.Yorum

@{
    ViewData["Title"] = "Yorumu Sil";
}

<h2>@ViewData["Title"]</h2>
<p>Bu yorumu silmek istediğinize emin misiniz?</p>

<div>
    <h4>Yorum İçeriği</h4>
    <div>@Model.Icerik</div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" asp-route-gorevId="@Model.GorevId" class="btn btn-secondary">İptal</a>
</form>
