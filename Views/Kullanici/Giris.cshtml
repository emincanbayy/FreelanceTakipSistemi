@model GirisViewModel
@{
    Layout = null;
    ViewData["Title"] = "Giriş Yap";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - FreelanceTakipSistemi</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .auth-card {
            background: white;
            padding: 2.5rem;
            border-radius: 1rem;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 420px;
        }

        .btn-gradient {
            background: linear-gradient(135deg, #0062E6, #33AEFF);
            border: none;
        }

            .btn-gradient:hover {
                background: linear-gradient(135deg, #0056B3, #269CFF);
            }
    </style>
</head>
<body>
    <div class="auth-card">
        <h2 class="text-center mb-4 text-primary">
            <i class="bi bi-box-arrow-in-right me-1"></i> Giriş Yap
        </h2>

        @if (ViewBag.Hata != null)
        {
            <div class="alert alert-warning text-center">@ViewBag.Hata</div>
        }

        <form asp-action="Giris" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Email" class="form-label"><i class="bi bi-envelope-fill me-1"></i> E-posta</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Parola" class="form-label"><i class="bi bi-lock-fill me-1"></i> Parola</label>
                <input asp-for="Parola" type="password" class="form-control" />
                <span asp-validation-for="Parola" class="text-danger small"></span>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-gradient text-white btn-lg">Giriş Yap</button>
            </div>

            <div class="text-center">
                <a asp-action="Kayit" class="link-secondary small">Hesabın yok mu? Kayıt Ol</a>
            </div>
        </form>

        <partial name="_ValidationScriptsPartial" />
    </div>
</body>
</html>
