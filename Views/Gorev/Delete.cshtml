@model FreelanceTakipSistemi.Models.Gorev

@{
    ViewData["Title"] = "Görev Sil";
}

<h2>@ViewData["Title"]</h2>
<h4>“@Model.Baslik” başlıklı görevi silmek istediğinize emin misiniz?</h4>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Açıklama</label>
        <p>@Model.Aciklama</p>
    </div>

    <div class="form-group">
        <label>Durum</label>
        <p>@Model.Durum</p>
    </div>

    <div class="form-group">
        <label>Oluşturulma Tarihi</label>
        <p>@Model.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</p>
    </div>

    <div class="form-group">
        <label>Teslim Tarihi</label>
        <p>@Model.TeslimTarihi?.ToString("dd.MM.yyyy")</p>
    </div>

    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
