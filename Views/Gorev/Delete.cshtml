@model FreelanceTakipSistemi.Models.Gorev

@{
    ViewData["Title"] = "Görev Sil";
}

<h2>@ViewData["Title"]</h2>
<h4>“@Model.Baslik” başlıklı görevi silmek istediğinize emin misiniz?</h4>

<div class="border p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">Açıklama</dt>
        <dd class="col-sm-10">@Model.Aciklama</dd>

        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">@Model.Durum</dd>

        <dt class="col-sm-2">Oluşturulma</dt>
        <dd class="col-sm-10">@Model.OlusturulmaTarihi.ToString("dd.MM.yyyy HH:mm")</dd>

        @if (Model.BitisTarihi.HasValue)
        {
            <dt class="col-sm-2">Bitiş Tarihi</dt>
            <dd class="col-sm-10">@Model.BitisTarihi.Value.ToString("dd.MM.yyyy")</dd>
        }
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="GorevId" />
    <input type="hidden" asp-for="RowVersion" />

    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>
