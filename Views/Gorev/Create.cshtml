@model FreelanceTakipSistemi.Models.Gorev

@{
    ViewData["Title"] = "Yeni Görev Ekle";
    Layout = "_Layout";
}

@section Styles {
    <style>
        .form-container {
            background: #fff;
            padding: 2rem 2.5rem;
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0,0,0,0.08);
        }

        .form-label {
            font-weight: 500;
        }

        .btn-success {
            padding: 0.6rem 1.5rem;
        }

        .btn-secondary {
            padding: 0.6rem 1.5rem;
        }

        .btn:hover {
            transform: scale(1.03);
            transition: all 0.2s ease-in-out;
        }

        .page-title {
            font-size: 2rem;
            font-weight: 600;
            color: #0d6efd;
            margin-bottom: 1.5rem;
        }

        .alert-danger strong {
            display: block;
            margin-bottom: .5rem;
        }
    </style>
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-container">
                <h2 class="page-title text-center">@ViewData["Title"]</h2>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <strong>Hata:</strong> Lütfen tüm gerekli alanları eksiksiz doldurun.
                    </div>
                }

                <form asp-action="Create" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="ProjeId" class="form-label">Proje</label>
                        <select asp-for="ProjeId" class="form-select" asp-items="ViewBag.ProjeList">
                            <option value="">-- Proje Seçin --</option>
                        </select>
                        <span asp-validation-for="ProjeId" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Baslik" class="form-label">Başlık</label>
                        <input asp-for="Baslik" class="form-control" />
                        <span asp-validation-for="Baslik" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Aciklama" class="form-label">Açıklama</label>
                        <textarea asp-for="Aciklama" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Aciklama" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Durum" class="form-label">Durum</label>
                        <select asp-for="Durum" class="form-select">
                            <option value="">-- Durum Seçin --</option>
                            <option value="Yapılacak">Yapılacak</option>
                            <option value="Devam Ediyor">Devam Ediyor</option>
                            <option value="Tamamlandı">Tamamlandı</option>
                        </select>
                        <span asp-validation-for="Durum" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TeslimTarihi" class="form-label">Teslim Tarihi</label>
                        <input asp-for="TeslimTarihi" type="date" class="form-control" />
                        <span asp-validation-for="TeslimTarihi" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Oncelik" class="form-label">Öncelik</label>
                        <select asp-for="Oncelik" class="form-select">
                            <option value="">-- Öncelik Seçin --</option>
                            <option value="Düşük">Düşük</option>
                            <option value="Orta">Orta</option>
                            <option value="Yüksek">Yüksek</option>
                        </select>
                        <span asp-validation-for="Oncelik" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success">Kaydet</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
