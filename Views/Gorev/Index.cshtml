@model IEnumerable<FreelanceTakipSistemi.Models.Gorev>

@{
    ViewData["Title"] = "Görevler";
    Layout = "_Layout";
}

@section Styles {
    <style>
        /* Hero Bölümü */
        .tasks-hero {
            background: linear-gradient(135deg, #0ea5e9, #06b6d4);
            color: white;
            padding: 3rem 0;
            text-align: center;
            margin-bottom: 3rem;
            border-radius: 1rem;
        }

        .tasks-hero .btn {
            border-radius: 30px;
            padding: 0.75rem 2rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .tasks-hero .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        /* Breadcrumb */
        .breadcrumb-custom {
            background: transparent;
            padding: 0;
            margin-bottom: 1.5rem;
        }

        .breadcrumb-custom .breadcrumb-item + .breadcrumb-item::before {
            content: "›";
            color: #6c757d;
        }

        /* Tablo */
        .table thead {
            background-color: #f8f9fa;
        }

        .table td,
        .table th {
            vertical-align: middle;
        }

        .badge {
            font-size: 0.85rem;
            padding: 0.5em 0.75em;
            border-radius: 0.5rem;
        }

        .btn-sm i {
            margin-right: 4px;
        }

        @media (max-width: 576px) {
            .table-responsive table {
                font-size: 0.875rem;
            }

            .tasks-hero h1 {
                font-size: 1.75rem;
            }

            .tasks-hero p {
                font-size: 1rem;
            }
        }
    </style>
}

<div class="container">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-custom">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
            <li class="breadcrumb-item active" aria-current="page">Görevler</li>
        </ol>
    </nav>
</div>

<!-- Hero -->
<section class="tasks-hero">
    <div class="container">
        <h1 class="display-5 fw-bold mb-3">Görev Takibi</h1>
        <p class="lead mb-4">Görevlerinizi görüntüleyin, yönetin ve kolayca yeni görevler ekleyin.</p>
        <a asp-action="Create" class="btn btn-light btn-lg me-3">
            <i class="bi bi-plus-circle"></i> Yeni Görev Ekle
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light btn-lg">
            <i class="bi bi-house-door"></i> Anasayfa
        </a>
    </div>
</section>

<!-- Görev Listesi -->
<div class="container">
    @if (!Model.Any())
    {
        <div class="alert alert-info mt-3">
            Henüz herhangi bir görev eklenmemiş.
            <a asp-action="Create" class="alert-link">Yeni görev oluşturmak için tıklayın.</a>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Proje</th>
                        <th>Başlık</th>
                        <th>Durum</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var g in Model)
                    {
                        <tr>
                            <td>@g.Id</td>
                            <td>@g.Proje?.Baslik</td>
                            <td>@g.Baslik</td>
                            <td>
                                <span class="badge bg-@(g.Durum == "Tamamlandı" ? "success" : g.Durum == "Devam Ediyor" ? "warning text-dark" : "secondary")">
                                    <i class="bi @(g.Durum == "Tamamlandı" ? "bi-check-circle-fill" : g.Durum == "Devam Ediyor" ? "bi-hourglass-split" : "bi-clock") me-1"></i>
                                    @g.Durum
                                </span>
                            </td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@g.Id" class="btn btn-sm btn-outline-info me-2">
                                    <i class="bi bi-eye"></i>Detay
                                </a>
                                <a asp-action="Edit" asp-route-id="@g.Id" class="btn btn-sm btn-outline-primary me-2">
                                    <i class="bi bi-pencil-square"></i>Düzenle
                                </a>
                                <a asp-action="Delete" asp-route-id="@g.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
